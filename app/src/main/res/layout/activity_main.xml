<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fndo"
    tools:context=".presentation.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icono"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginLeft="4dp"
                android:text="Usuario"/>
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginBottom="4dp"
                android:hint="Usuario" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginLeft="4dp"
                android:text="Contraseña"/>
            <EditText android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:hint="Contraseña" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange_800"
                    android:text="@string/iniciarsesion_lbliniciarsesion"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="@drawable/selector_iniciarsesion"
                    android:id="@+id/btn_login"/>
            </LinearLayout>
    </LinearLayout>
  <!--  <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fndo"
        android:scaleType="centerCrop"/>
-->
</RelativeLayout>
